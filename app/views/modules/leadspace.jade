                  span.ibm-play-link
                  img.ibm-resize(alt="", src=videoImg, target="_blank")
  else
    //- Tier 1 homepage view
    .ibm-columns.ibm-alternate-background.ibm-padding-top-2.ibm-padding-bottom-1(style="position:relative" data-widget="parallax")
      .ibm-col-5-3.ibm-col-large-6-3.ibm-col-medium-6-4.wow.fadeIn(class=customClass)
