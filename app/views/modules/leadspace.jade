  if !content.is_index
    //- Tier 3 features list view
    if features_enabled
      .ibm-columns.ibm-alternate-background.ibm-padding-top-2.ibm-padding-bottom-1(style="postition:relative" data-widget="parallax")
        .ibm-col-6-3.ibm-col-medium-4-2.wow.fadeIn
          h1#ibm-pagetitle-h1.ibm-h1.ibm-light= content.leadspace.header
          h5.ibm-h5= content.leadspace.subhead
