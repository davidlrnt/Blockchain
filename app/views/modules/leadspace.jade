        .ibm-col-6-3.ibm-col-medium-4-2.wow.fadeIn
          ul.bluemix-features-list
            each item in content.leadspace.features.list
              li= item

    if !features_enabled && !video_enabled
      //- Tier 2 centered view
      .ibm-columns.ibm-alternate-background.ibm-padding-top-2.ibm-padding-bottom-0(style="position:relative" data-widget="parallax")
        //- .ibm-col-6-4.ibm-center-block.ibm-center.wow.fadeIn
        .ibm-col-6-4.wow.fadeIn(class=customClass)
          h1.ibm-h1.ibm-light !{content.leadspace.header}
            if content.is_index
              h2.ibm-h2= content.leadspace.subhead
            else
              h5.ibm-h5= content.leadspace.subhead
          if (content.leadspace.primary_cta.enabled)
            p.ibm-button-link.ibm-btn-row
              if (content.leadspace.primary_cta.cta.onClick)
                a.ibm-btn-pri.ibm-btn-blue-30(class=(content.leadspace.primary_cta.cta._class) ? "#{content.leadspace.primary_cta.cta._class}" : "" href="#{content.leadspace.primary_cta.cta.href}" onclick="#{content.leadspace.primary_cta.cta.onClick}" )= content.leadspace.primary_cta.cta.text
                if (content.leadspace.secondary_cta.enabled)
                  for cta in content.leadspace.secondary_cta.cta
                      a.ibm-btn-pri.ibm-btn-blue-30(href="#{cta.href}", onclick="#{content.leadspace.secondary_cta.cta.onClick}")= cta.text
              else
                a.ibm-btn-pri.ibm-btn-blue-30(class=(content.leadspace.primary_cta.cta._class) ? "#{content.leadspace.primary_cta.cta._class}" : "" href="#{content.leadspace.primary_cta.cta.href}" )= content.leadspace.primary_cta.cta.text
                if (content.leadspace.secondary_cta.enabled)
                  for cta in content.leadspace.secondary_cta.cta
                      a.ibm-btn-pri.ibm-btn-blue-30(href="#{cta.href}")= cta.text
          //- .ibm-columns
            .ibm-col-1-1.ibm-center
                p.ibm-ind-link
                  if (content.leadspace.secondary_cta.enabled)
                    for cta in content.leadspace.secondary_cta.cta
                        a.ibm-forward-link(href="#{cta.href}", style="margin:0 15px 0 5px")= cta.text

    if video_enabled && !features_enabled
      //- Tier 2 video view
