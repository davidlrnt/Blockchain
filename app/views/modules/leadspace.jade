            if (content.leadspace.primary_cta.cta.onClick)
              a.ibm-btn-pri.ibm-btn-blue-30(class=(content.leadspace.primary_cta.cta._class) ? "#{content.leadspace.primary_cta.cta._class}" : "" href="#{content.leadspace.primary_cta.cta.href}" onclick="#{content.leadspace.primary_cta.cta.onClick}" )= content.leadspace.primary_cta.cta.text
